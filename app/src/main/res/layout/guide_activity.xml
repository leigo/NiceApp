<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/guide_page_1_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/indicator_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/guide_page_indicator_bottom_margin"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/img_indecator1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5.0dip"
            android:src="@drawable/new_pagecontrol_one" />

        <ImageView
            android:id="@+id/img_indecator2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/new_pagecontrol_point" />

        <ImageView
            android:id="@+id/img_indecator3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:src="@drawable/new_pagecontrol_point" />
    </LinearLayout>

    <Button
        android:textSize="18.0sp"
        android:textStyle="bold"
        android:textColor="#fffc6661"
        android:id="@+id/btn_start"
        android:background="@drawable/new_button_start_selector"
        android:visibility="gone"
        android:layout_width="170.0dip"
        android:layout_height="@dimen/guide_page_start_btn_height"
        android:layout_marginBottom="@dimen/guide_page_start_btn_bottom_margin"
        android:text="@string/start_now"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>