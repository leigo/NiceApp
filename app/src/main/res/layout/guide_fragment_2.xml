<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:textSize="@dimen/guide_page_title_size"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@id/txt_nice_daily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/guide_page_title_top_margin"
        android:text="@string/community"
        android:shadowColor="#ff009dba"
        android:shadowDx="1.0"
        android:shadowDy="2.0"
        android:shadowRadius="2.0"
        android:drawableLeft="@drawable/new_icon_community"
        android:drawablePadding="5.0dip"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textSize="@dimen/guide_page_sub_title_size"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/guide_page_sub_title_top_margin"
        android:text="@string/guide_page_2"
        android:shadowColor="#ff009dba"
        android:shadowDx="1.0"
        android:shadowDy="2.0"
        android:shadowRadius="2.0"
        android:layout_below="@id/txt_nice_daily"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/center_marker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/img_cloud1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:src="@drawable/new_graph_cloud1"
        android:layout_alignBottom="@+id/img_cloud4" />

    <ImageView
        android:id="@+id/img_cloud5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/new_graph_cloud5"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/img_cloud2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50.0dip"
        android:layout_marginBottom="50.0dip"
        android:src="@drawable/new_graph_cloud2"
        android:layout_toLeftOf="@id/center_marker"
        android:layout_above="@id/center_marker" />

    <ImageView
        android:id="@+id/img_cloud6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30.0dip"
        android:layout_marginBottom="40.0dip"
        android:src="@drawable/new_graph_cloud6"
        android:layout_toRightOf="@id/center_marker"
        android:layout_above="@id/center_marker" />

    <ImageView
        android:id="@+id/img_cloud3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60.0dip"
        android:layout_marginRight="50.0dip"
        android:src="@drawable/new_graph_cloud3"
        android:layout_toLeftOf="@id/center_marker"
        android:layout_below="@id/center_marker" />

    <ImageView
        android:id="@+id/img_cloud7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50.0dip"
        android:layout_marginRight="30.0dip"
        android:src="@drawable/new_graph_cloud7"
        android:layout_below="@id/center_marker"
        android:layout_alignParentRight="true" />

    <ImageView
        android:id="@+id/img_cloud4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/new_graph_cloud4"
        android:layout_centerInParent="true" />
</RelativeLayout>